{
  "kind": "ReplicationController",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "jenkins-leader",
    "labels": {
      "name": "jenkins", "role": "leader"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "jenkins", "role": "leader"
    },
    "template": {
      "metadata": {
        "name": "jenkins-leader",
        "labels": {
          "name": "jenkins", "role": "leader"
        }
      },
      "spec": {
        "containers": [
            {
             "name": "jenkins",
             "image": "gcr.io/cloud-solutions-images/jenkins-gcp-leader:latest",
             "command": [
                "/usr/local/bin/start.sh"
             ],
             "env": [
                {
                  "name": "GCS_RESTORE_URL",
                  "value": "gs://jenkinsbackup/LATEST.tar.gz"
                }
             ],
             "ports": [
               {
                 "name": "jenkins-http",
                 "containerPort": 8080
               },
               {
                 "name": "jenkins-discovery",
                 "containerPort": 50000
               }
             ]
           }
        ]
      }
    }
  }
}
